.recharge{
  padding: 0 30rpx;
}

.recharge .title{
  padding: 30rpx 0;
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(0,0,0,0.85);
}

.recharge .inputBox{
    padding: 7rpx 0 37rpx;
    border-bottom: 2rpx solid rgba(0,0,0,0.15);
}

.recharge .inputBox .icon{
    font-size:40rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(0,0,0,0.85);
    margin-right: 20rpx;
}

.recharge .inputBox .weui-input{
    font-size:30rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:#333;
}

.recharge .selectBox{
    width: 100%;
    height: 120rpx;
    background: none;
    border-radius:10rpx;
    border:2rpx solid rgba(221,221,221,1);
}

.footer{
    margin-top: 120rpx;
}

.selectbox{
    position: fixed;
    left:0;
    right:0;
    bottom: 0;
    padding: 0 30rpx;
    background: #fff;
}
.selectbox .title{
    padding: 30rpx 0;
    border-bottom: 2rpx solid rgba(0,0,0,0.15);
}

.selectbox .radioGroup .flex_between_v{
  padding: 30rpx 0;
  border-bottom: 2rpx solid rgba(0,0,0,0.15);
}

.radioFooter{
  padding: 30rpx 0;
  text-align: center;
  font-size:32rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(1,136,251,1);
}