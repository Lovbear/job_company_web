.editCompany{
   padding: 0 30rpx;
}
.editCompany .list{
  padding: 30rpx 0;
  border-bottom: 2rpx solid #F5F5F5;
}
.editCompany .list .label{
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}

.editCompany .list .val{
  font-size:32rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}

.editCompany .picHeader{
    width:64rpx;
    height:64rpx;
    border:2rpx solid rgba(235,235,235,1);
    border-radius: 50%;
}

.icon image{
  margin-left: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.greyLine{
  margin-top: 0;
}

.editCompany .title{
  padding: 30rpx 0;
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.upVedio{
  padding-bottom: 30rpx;
}

.vedioBox{
  position: relative;
  width:690rpx;
  height:222rpx;
  background:rgba(255,255,255,1);
  border-radius:12rpx;
  opacity:0.7;
  border:2rpx solid rgba(151,151,151,1);
  text-align: center;
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}

.vedioBox .icon_up{
  margin: 60rpx 0 20rpx;
  width: 40rpx;
  height: 40rpx;
  overflow: hidden;
} 

.textreabox{
    padding: 30rpx;
    background:rgba(255,255,255,1);
    border-radius:12rpx;
    opacity:0.7;
    border:1px solid rgba(151,151,151,1);
    font-size:32rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:#333;
}


.textreabox textarea{
  width: 100%;
  height: 250rpx;
}

.proInfo{
  padding-bottom: 100rpx;
}

.blueBtn{
  letter-spacing: 4px;
}

.vedioBox video{
  height: 220rpx;
}

.vedioBox .edit{
      position: absolute;
      top: 0;
      right: 0;
      padding: 4rpx 10rpx;
      background: #0188FB;
      color: #fff;
      z-index: 99;
}