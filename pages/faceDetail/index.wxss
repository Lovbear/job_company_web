.companyDetail{
    padding: 0 30rpx;
}

.hotjob{
  margin-top: 32rpx;
}

.hotjob .title{
  font-size:34rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(51,51,51,1);
}

.job-info .salary{
    margin-left: 20rpx;
    font-size:26rpx;
}

.hotjob .more{
  padding: 20rpx 0;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}

.eduInfo{
  padding: 16rpx 0 24rpx;
  font-size:26rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  border-bottom: 2rpx solid rgba(0,0,0,0.15);
}
.eduInfo .post{
  font-weight:600;
  color: #000;
}

.eduInfo .info{
  margin-top: 12rpx;
  font-size:22rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}

.greyLine{
  margin: 30rpx 0 0;
  height: 2rpx;
}

.status{
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}

.dot{
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: #12C887;
  margin-right: 12rpx;
}

.bggreen{
    color: #fff;
    background:rgba(0,179,138,1);
}

.bgsucess{
    color: #49AE97;
    background:rgba(187,238,226,1);
}

.bgError{
  color: #C84B4B;
  background:rgba(238,187,187,1);
}


